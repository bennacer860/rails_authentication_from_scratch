<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "User Authentication From Scratch" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "User Authentication From Scratch" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if current_user %>
        Signed in as <%= current_user.name %> | <%= link_to "Logout", logout_path %>
    <% else %>
        <%= link_to 'Login', login_path %> | <%= link_to 'Signup', new_user_path %>
    <% end %>
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </main>
  </body>
</html>
